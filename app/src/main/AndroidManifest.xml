<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.conflux.finflux">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_GPS" />
    <uses-permission android:name="android.permission.ACCESS_ASSISTED_GPS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.conflux.finflux.infrastructure.FinfluxApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.conflux.finflux.infrastructure.SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.conflux.finflux.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="com.conflux.finflux.infrastructure.ApplicationSetup"
            android:label="@string/title_activity_application_setup"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="com.conflux.finflux.infrastructure.ApplicationActivation"
            android:label="@string/title_activity_application_activation"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="com.conflux.finflux.dashboard.activity.DashBoardActivity"
            android:label="@string/title_sliding_activity"
            android:theme="@style/FullscreenTheme" />
        <activity android:name="com.conflux.finflux.logout.activity.LogoutActivity" />

        <activity
            android:name=".collectionSheet.activity.CollectionSheetActivity"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">

        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.conflux.finflux.login.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/FullscreenTheme"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="com.conflux.finflux.settings.activity.SettingsActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.conflux.finflux.login.activity.LoginActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.conflux.finflux.login.activity.LoginActivity" />
        </activity>
        <activity
            android:name="com.conflux.finflux.settings.activity.ApplicationSettings"
            android:label="@string/title_activity_application_settings"
            android:parentActivityName="com.conflux.finflux.dashboard.activity.DashBoardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.conflux.finflux.dashboard.activity.DashBoardActivity" />
        </activity>

        <receiver
            android:name="com.conflux.finflux.util.bluetooth.BluetoothStateChanged"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.bluetooth.adapter.action.STATE_CHANGED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.conflux.finflux.offline.activity.OfflineManagement"
            android:label="@string/title_activity_offline_management"
            android:parentActivityName="com.conflux.finflux.dashboard.activity.DashBoardActivity"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.conflux.finflux.dashboard.activity.DashBoardActivity" />
        </activity>
        <activity
            android:name="com.conflux.finflux.offline.activity.FetchCollection"
            android:label="@string/title_activity_fetch_collection"
            android:parentActivityName="com.conflux.finflux.offline.activity.OfflineManagement"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.conflux.finflux.offline.activity.OfflineManagement" />
        </activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="0536134ea9ec69fa467ff2d76607a4796d2907eb" />
    </application>

</manifest>
