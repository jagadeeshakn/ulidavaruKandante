<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item>
            <shape>
                <gradient android:angle="90" android:startColor="#ffffff"
                    android:endColor="#F2F2F2" android:type="linear" />

                <stroke android:width="2dp" android:color="@color/primary" />

                <corners android:radius="5dp" />

                <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
            </shape>
        </item>
        <item>
            <bitmap android:gravity="bottom|right"   android:src="@drawable/ic_arrowhead_down" />
        </item>
    </layer-list></item>

</selector>