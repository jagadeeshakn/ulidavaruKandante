<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent_material_dark</item>
        <item name="android:colorForeground">@color/calendar_highlighted_day_bg</item>
        <item name="android:textColorPrimary">@color/accent</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowContentOverlay">@color/blue</item>
        <item name="android:windowBackground">@color/white</item>
        <!--<item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>-->
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->

    <style name="AppTheme.Text" parent="android:Widget.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        //hint color And Label Color in False State
        <item name="android:textColorHint">@color/ash_grey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHintInverse">@color/white</item>
        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="OfflineLable" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="OfflineMenu" parent="AppTheme">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ListTitle" parent="AppTheme.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListItemInfo" parent="AppTheme.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ListItemStatus" parent="AppTheme.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
    </style>


    <style name="SubmitButton" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="spinner_style" >
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:layout_weight">1.3</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="edit_textbox">
        <item name="android:background">@drawable/edit_textbox_style</item>
        <item name="android:layout_weight">1.3</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">8dp</item>
    </style>



</resources>
